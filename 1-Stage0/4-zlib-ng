# llvmtools: zlib-ng
# Build and install as cmlfs

CC=x86_64-cmlfs-linux-musl-gcc \
CXX=x86_64-cmlfs-linux-musl-g++ \
./configure \
    --prefix=/llvmtools \
    --libdir=/llvmtools/lib \
    --zlib-compat

make -j`nproc --all` && make install

ln -sv libz.so.1.3.1.zlib-ng /llvmtools/lib/libz.so.1.3.1
