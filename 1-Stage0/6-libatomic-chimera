# llvmtools: libatomic-chimera
# Build and install as cmlfs

# Build
CC=x86_64-cmlfs-linux-musl-gcc  \
CXX=x86_64-cmlfs-linux-musl-g++ \
AR=x86_64-cmlfs-linux-musl-ar \
RANLIB=x86_64-cmlfs-linux-musl-ranlib \
CFLAGS="-O2 -fuse-ld=mold" \
make PREFIX="/llvmtools" -j`nproc --all`

# Install to llvmtools
make PREFIX="/llvmtools" install
