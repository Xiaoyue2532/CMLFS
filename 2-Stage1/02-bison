# Stage 1: bison
# Build as cmlfs
#
# Use GNU Bison

# Configure source
CC=clang CXX=clang++ \
AR=llvm-ar \
AS=llvm-as \
RANLIB=llvm-ranlib \
LD=ld.lld \
STRIP=llvm-strip \
./configure --prefix=/llvmtools \
            --build=x86_64-pc-linux-musl \
            --host=x86_64-pc-linux-musl

# Compile
make -j16

# Install to llvmtools
make install