# Stage 1: ncurses
# Build and install as cmlfs

# Ensure gawk exist on the host
mkdir build
pushd build
    CC=clang  \
    CXX=clang++ \
    AR=llvm-ar \
    RANLIB=llvm-ranlib \
    ../configure AWK=gawk
    make -C include
    make -C progs tic
popd

# Build
CC=clang  \
CXX=clang++ \
AR=llvm-ar \
RANLIB=llvm-ranlib \
./configure \
    --prefix=/llvmtools \
    --host=x86_64-pc-linux-musl \
    --build=x86_64-pc-linux-musl \
    --with-shared \
    --without-normal \
    --with-cxx-shared \
    --without-debug \
    --without-ada \
    --disable-stripping \
    AWK=gawk

make -j16
# Install to llvmtools
make TIC_PATH=$(pwd)/build/progs/tic install

ln -sv libncursesw.so /llvmtools/lib/libncurses.so
sed -e 's/^#if.*XOPEN.*$/#if 1/' \
    -i /llvmtools/include/ncursesw/curses.h

# Some packages may not configure with the curses library
# in llvmtools. Create a compatibility links:
ln -sv  libcurses.so  /llvmtools/lib/libtinfo.so
ln -sv  libcurses.so  /llvmtools/lib/libtinfow.so
