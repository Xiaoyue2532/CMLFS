# llvmtools: libxo
# Build as cmlfs
#
# NOTE: Required by chimerautils-tiny

# Apply patches from Chimera Linux
find ../../cports/main/libxo/patches/ -type f -exec patch -Np1 -i {} \;

# Configure
CC=clang CXX=clang++ \
LD=ld.mold \
AR=llvm-ar AS=llvm-as \
RANLIB=llvm-ranlib STRIP=llvm-strip \
./configure \
    --prefix=/llvmtools \
    --build=x86_64-cmlfs-linux-musl \
    --host=x86_64-cmlfs-linux-musl \
    --exec-prefix=/llvmtools \
    --with-gettext=/llvmtools

# Build and install to toolchain
make -j`nproc --all` && make install
