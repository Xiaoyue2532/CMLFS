# llvmtools: OpenSSL
# Build & install under chroot

# Configure
CC=clang CXX=clang++ \
LD=ld.mold \
AR=llvm-ar AS=llvm-as \
RANLIB=llvm-ranlib STRIP=llvm-strip \
./config \
    --prefix=/llvmtools \
    --openssldir=/llvmtools/etc/ssl \
    --libdir=lib \
    shared \
    zlib-dynamic \
    enable-ktls \
    -Wa,--noexecstack

# Compile and install
make -j`nproc --all` && make install
