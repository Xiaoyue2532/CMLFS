# Stage1: file
# Build and install under chroot
# Must use same version for llvmtools 
# and final system. 

# Configure source
CC=clang \
CXX=clang++ \
AR=llvm-ar \
AS=llvm-as \
RANLIB=llvm-ranlib \
LD=ld.lld \
STRIP=llvm-strip \
./configure --build=x86_64-pc-linux-musl \
            --host=x86_64-pc-linux-musl  \
            --prefix=/llvmtools      \
            --disable-libseccomp

# Build and install to toolchain
make -j`nproc --all` && make install
