# Stage1: Zstd
# This section is done in Chroot environment

CC=clang CXX=clang++ \
AR=llvm-ar \
    make -j`nproc --all`
CC=clang CXX=clang++ \
AR=llvm-ar \
    make -C contrib/pzstd -j`nproc --all`

CC=clang CXX=clang++ \
AR=llvm-ar \
make prefix=/llvmtools \
    install

CC=clang CXX=clang++ \
AR=llvm-ar \
make PREFIX=/llvmtools \
    -C contrib/pzstd install
