# Stage1: fakeroot
# This section is done in Chroot environment

CC=clang CXX=clang++ \
LD=ld.mold \
AR=llvm-ar AS=llvm-as \
RANLIB=llvm-ranlib STRIP=llvm-strip \
OBJCOPY=llvm-objcopy OBJDUMP=llvm-objdump \
./configure \
    --prefix=/llvmtools \
    --libdir=/llvmtools/lib/libfakeroot \
    --disable-static \
    --with-ipc=sysv

# you may need to comment out INT_SEND_GET_XATTR
make -j`nproc --all`

make install
