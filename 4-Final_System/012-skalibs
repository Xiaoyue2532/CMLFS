# Final System: Skalibs
# This section is done in Chroot environment

# Configure source
CC=clang \
CXX=clang \
./configure \
    --prefix=/usr \
    --build="x86_64-cmlfs-linux-musl" \
    --enable-static \
    --enable-shared \
    --libdir=/usr/lib

# Build and Install
make -j`nproc --all` && make install
